@model IEnumerable<InsuranceManagement.Models.Agent>

@{
    ViewBag.Title = "ChooseAgent";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

<br />
<h2>Choose Agent</h2>

@using (Html.BeginForm("SearchAgent", "CustomerInterface", FormMethod.Get, new { @class = "form-inline", role = "form" }))
{
    <div class="input-group">
        @Html.TextBox("searchQuery", null, new { @class = "form-control", placeholder = "Search" })
        <span class="input-group-btn">
            <button type="submit" class="btn btn-default"><i class="glyphicon glyphicon-search"></i></button>
        </span>
    </div>
}

<br />

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Mail)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mail)
            </td>
            <td>
                @Html.ActionLink("Choose", "ConfirmContract", new { customerId = ViewBag.CustomerId, agentId = item.AgentId, insuranceId = ViewBag.InsuranceId })
            </td>
        </tr>
    }

</table>
