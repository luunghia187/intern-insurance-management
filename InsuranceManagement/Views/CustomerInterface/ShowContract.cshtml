@model IEnumerable<InsuranceManagement.Models.Contract>

@{
    ViewBag.Title = "ShowContract";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

@{ 
    var AccountId = ViewBag.AccountId;
}

<br />
<h2>Show Contract</h2>

<table class="table">
    <tr>
        <th>
            <label for="@Html.DisplayNameFor(model => model.Agent.Name)">Agent Name</label>
        </th>
        <th>
            <label for="@Html.DisplayNameFor(model => model.Insurance.Name)">Insurance Name</label>
        </th>
        <th>
            <label for="@Html.DisplayNameFor(model => model.SigningDate)">Signing Date</label>
        </th>
        <th>
            <label for="@Html.DisplayNameFor(model => model.ExpirationDate)">Expiration Date</label>
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Proof)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Agent.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Insurance.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SigningDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExpirationDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Proof)
            </td>
            <td>
                @if (item.Status.ToString() == "HoldOn")
                {
                    <a href="@Url.Action("ApproveContract", "CustomerInterface", new {contractId = item.ContractId, customerId = item.CustomerId })" class="btn btn-primary">Approve</a>
                }
                else
                {
                    @Html.DisplayFor(modelItem => item.Status)
                }
            </td>
        </tr>
    }
</table>


<div>
    @Html.ActionLink("Back to home", "Index", new { id = AccountId })
</div>
